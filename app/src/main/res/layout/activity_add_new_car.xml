<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawerAddCar"
    android:layout_height="match_parent"
    tools:context=".AddNewCar">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <include
            layout="@layout/main_tool_bar"/>
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#fff4eb"
            tools:context=".addcar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_marginTop="10dp"

                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:src="@drawable/img8"
                    app:civ_border_width="2dp"
                    android:layout_gravity="center_horizontal"
                    app:civ_border_color="#FF000000"/>

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="#ff6827"
                    android:text="Upload Image "
                    app:bootstrapBrand="secondary"
                    android:textSize="9pt"
                    android:fontFamily="@font/mmm"
                    android:layout_gravity="center_horizontal"
                    app:bootstrapSize="xl"
                    app:buttonMode="regular"
                    app:roundedCorners="true"
                    app:showOutline="false"
                    android:textStyle="bold|italic"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Manufactor"
                    android:textColor="#130400"
                    android:textSize="9pt"
                    android:textStyle="bold"
                    android:fontFamily="@font/text3"
                    android:layout_marginTop="10dp"
                    />

                <com.beardedhen.androidbootstrap.BootstrapEditText

                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:bootstrapSize="md"
                    app:bootstrapBrand="info"

                    android:layout_marginTop="10dp"
                    android:inputType="text"
                    android:textColor="#130400"

                    />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Name :"
                    android:textColor="#f000"
                    android:textSize="9pt"
                    android:fontFamily="@font/text3"
                    android:textStyle="bold"
                    android:translationY="5dp" />

                <com.beardedhen.androidbootstrap.BootstrapEditText

                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:bootstrapSize="md"
                    app:bootstrapBrand="info"

                    android:layout_marginTop="10dp"
                    android:inputType="text"
                    android:textColor="#130400"

                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Model"
                    android:textColor="#130400"
                    android:textSize="9pt"
                    android:fontFamily="@font/text3"
                    android:textStyle="bold"
                    android:translationX="10dp"
                    android:translationY="5dp" />
                <com.beardedhen.androidbootstrap.BootstrapEditText

                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:bootstrapSize="md"
                    app:bootstrapBrand="info"

                    android:layout_marginTop="10dp"
                    android:inputType="text"
                    android:textColor="#130400"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Gear Box Type:-"
                    android:textColor="#130400"
                    android:textSize="10pt"
                    android:fontFamily="@font/text3"
                    android:textStyle="bold"
                    android:translationY="8dp" />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Automatical"
                    android:textColor="#130400"
                    android:textSize="8pt"
                    android:fontFamily="@font/text3"
                    android:textStyle="bold"
                    android:translationY="5dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Manual"
                    android:textColor="#130400"
                    android:textSize="8pt"
                    android:fontFamily="@font/text3"
                    android:textStyle="bold"
                    android:translationY="5dp" />

                <com.beardedhen.androidbootstrap.BootstrapButton

                    android:layout_width="wrap_content"
                    android:layout_height="52dp"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="#ff6827"
                    android:fontFamily="@font/mmm"
                    android:text="FINSH "
                    android:textSize="9pt"
                    android:textStyle="bold|italic"
                    android:translationX="140dp"
                    android:translationY="-36dp"
                    app:bootstrapBrand="secondary"
                    app:bootstrapSize="xl"
                    app:buttonMode="regular"
                    app:roundedCorners="true"
                    app:showOutline="false" />


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:layout_gravity="start"
        >
        <include
            layout="@layout/main_nav_drawer2"
            />
    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>